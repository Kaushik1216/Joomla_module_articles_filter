<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
	<name>mod_articles_list_by_category</name>
	<author>Kaushik Vishwakarma</author>
	<creationDate>2 June 2023</creationDate>
	<copyright>[copyright]</copyright>
	<license>[license]</license>
	<authorEmail>kaushik.vishwakarma2003@gmail.com</authorEmail>
	<authorUrl>https://github.com/Kaushik1216</authorUrl>
	<version>1.0.0</version>
	<description>MOD_ARTICLES_LIST_BY_CATEGORY_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Module\ArticlesListByCategory</namespace>
	<files>
		<folder module="mod_articles_list_by_category">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/mod_articles_list_by_category.ini</language>
		<language tag="en-GB">language/en-GB/mod_articles_list_by_category.sys.ini</language>
	</languages>
	<help key="Site_Modules:_Articles_-_List_-_By_-_Category" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="mode"
					type="list"
					label="MOD_ARTICLES_CATEGORY_FIELD_MODE_LABEL"
					description="MOD_ARTICLES_CATEGORY_FIELD_MODE_DESC"
					default="normal"
					validate="options"
					>
					<option value="normal">MOD_ARTICLES_CATEGORY_OPTION_NORMAL_VALUE</option>
					<option value="dynamic">MOD_ARTICLES_CATEGORY_OPTION_DYNAMIC_VALUE</option>
				</field>

				<field
					name="show_on_article_page"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_ARTICLES_CATEGORY_FIELD_SHOWONARTICLEPAGE_LABEL"
					description="MOD_ARTICLES_CATEGORY_FIELD_SHOWONARTICLEPAGE_DESC"
					default="1"
					filter="integer"
					showon="mode:dynamic"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>

			<fieldset
				name="filtering"
				label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_GROUP_FILTERING_LABEL"
			>

				<field
					name="count"
					type="number"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_COUNT_LABEL"
					description="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_COUNT_DESC"
					default="0"
					filter="integer"
				/>

				<field
					name="show_front"
					type="list"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_SHOWFEATURED_LABEL"
					default="show"
					validate="options"
					>
					<option value="show">JSHOW</option>
					<option value="hide">JHIDE</option>
					<option value="only">MOD_ARTICLES_LIST_BY_CATEGORY_OPTION_ONLYFEATURED_VALUE</option>
				</field>

				<field
					name="filteringspacer0"
					type="spacer"
					hr="true"
				/>

				<field
					name="category_filtering_type"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_CATFILTERINGTYPE_LABEL"
					default="1"
					filter="integer"
					>
					<option value="0">MOD_ARTICLES_LIST_BY_CATEGORY_OPTION_EXCLUSIVE_VALUE</option>
					<option value="1">MOD_ARTICLES_LIST_BY_CATEGORY_OPTION_INCLUSIVE_VALUE</option>
				</field>

				<field
					name="catid"
					type="category"
					label="JCATEGORY"
					extension="com_content"
					multiple="true"
					layout="joomla.form.field.list-fancy-select"
					filter="intarray"
					class="multipleCategories"
				/>

				<field
					name="filteringspacer1"
					type="spacer"
					hr="true"
				/>

				<field
					name="filter_tag"
					type="tag"
					label="JTAG"
					mode="nested"
					multiple="true"
					filter="intarray"
					class="multipleTags"
				/>

			</fieldset>

			<fieldset
				name="display"
				label="MOD_ARTICLES_CATEGORY_FIELD_GROUP_DISPLAY_LABEL"
				>

				<field
					name="link_titles"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_LINKTITLES_LABEL"
					default="1"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="show_author"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="JAUTHOR"
					default="0"
					filter="integer"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="show_date"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="JDATE"
					default="0"
					filter="integer"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="show_date_field"
					type="list"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_DATEFIELD_LABEL"
					default="publish_up"
					showon="show_date:1"
					validate="options"
					>
					<option value="created">MOD_ARTICLES_LIST_BY_CATEGORY_OPTION_CREATED_VALUE</option>
					<option value="modified">MOD_ARTICLES_LIST_BY_CATEGORY_OPTION_MODIFIED_VALUE</option>
					<option value="publish_up">MOD_ARTICLES_LIST_BY_CATEGORY_OPTION_STARTPUBLISHING_VALUE</option>
				</field>

				<field
					name="show_date_format"
					type="text"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_DATEFIELDFORMAT_LABEL"
					description="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_DATEFIELDFORMAT_DESC"
					default="Y-m-d H:i:s"
					showon="show_date:1"
				/>

				<field
					name="show_introtext"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_SHOWINTROTEXT_LABEL"
					default="1"
					filter="integer"
					>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="introtext_limit"
					type="number"
					label="MOD_ARTICLES_LIST_BY_CATEGORY_FIELD_INTROTEXTLIMIT_LABEL"
					default="100"
					filter="integer"
					showon="show_introtext:1"
				/>

			</fieldset>

			<fieldset name="advanced">

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="owncache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
